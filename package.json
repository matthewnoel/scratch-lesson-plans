{
	"name": "scratch-project-guides",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run generate-projects && vite dev",
		"build": "npm run generate-projects && vite build",
		"preview": "npm run generate-projects && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e",
		"licenses": "npx generate-license-file --input package.json --output third-party-licenses.txt --overwrite",
		"generate-projects": "node scripts/generate-projects.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"generate-license-file": "^3.6.0",
		"globals": "^15.14.0",
		"markdown-it": "^14.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"scratchblocks": "^3.6.4",
		"svelte": "^5.16.0",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.19.0",
		"vite": "^6.0.6"
	}
}
